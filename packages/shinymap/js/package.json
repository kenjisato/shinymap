{
  "name": "shinymap",
  "version": "0.2.0",
  "description": "Core React map renderer with lightweight demo geometry.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js}'",
    "demo": "esbuild demo/App.tsx --bundle --sourcemap --format=esm --outfile=demo/dist/app.js --watch",
    "serve": "npm-run-all --parallel demo serve:static",
    "serve:static": "npx --yes http-server demo --port 4173"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "keywords": [
    "react",
    "shiny",
    "map",
    "geometry"
  ],
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "esbuild": "^0.25.12",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript": "^5.4.0"
  }
}
